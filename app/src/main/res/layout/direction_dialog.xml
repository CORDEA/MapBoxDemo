<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="@dimen/direction_dialog_padding"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/latitude_departure"
        android:hint="@string/latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/longitude_departure"
        android:hint="@string/longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/direction_dialog_text_margin"
        android:text="@string/arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/latitude_arrival"
        android:hint="@string/latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/longitude_arrival"
        android:hint="@string/longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>